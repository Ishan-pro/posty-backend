datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
    id              Int             @id @default(autoincrement())
    createdAt       DateTime        @default(now())
    content         String?
    author          User            @relation(fields: [authorId], references: [id])
    authorId        Int
}

model User {
    id              Int             @id @default(autoincrement())
    username        String          @unique
    email           String          @unique
    name            String
    posts           Post[]
}